<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=2, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Portfolio SIO</title>
    <div class="text-white" style="background-color: #2980b9;">

          <div class="row">
            <div class="col-md-5">
            </div>
            <div class="col-md-6">
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('adminAccueil') }}"><img src= {{ asset('images/logo.png') }} height=100></a>
            {% elseif is_granted('ROLE_ENSEIGNANT') %}
              <a href="{{ path('enseignantAccueil', { 'enseignant_id': app.user.enseignant.id }) }}"><img src= {{ asset('images/logo.png') }} height=100></a>      
            {% else %}
              <a href="{{ path('etudiantAccueil', { 'etudiant_id': app.user.etudiant.id }) }}"><img src= {{ asset('images/logo.png') }} height=100></a>
            {% endif %}
            </div>
            <div class="col-md-1">
            {% if is_granted('ROLE_ADMIN') %}
              {{app.user.username}} {{app.user.username}}
            {% elseif is_granted('ROLE_ENSEIGNANT') %}
                {{app.user.enseignant.prenom}} {{app.user.enseignant.nom}}
            {% else %}
                {{app.user.etudiant.prenom}} {{app.user.etudiant.nom}}
            {% endif %}
            </div>
            
      </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      {% if is_granted('ROLE_ADMIN') %}
        <a class="navbar-brand" href="{{ path('adminAccueil') }}" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
          Accueil
        </a>
      {% elseif is_granted('ROLE_ENSEIGNANT') %}
        <a class="navbar-brand" href="{{ path('enseignantAccueil', { 'enseignant_id': app.user.enseignant.id }) }}" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
          Accueil
        </a>
      {% else %}
      <a class="navbar-brand" href="{{ path('etudiantAccueil', { 'etudiant_id': app.user.etudiant.id }) }}" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
          Accueil
        </a>      
        {% endif %}
      </li>


<div class="collapse navbar-collapse" id="navbarSupportedContent">
  {% if is_granted('ROLE_ADMIN') %}
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <a class="navbar-brand dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Etudiant</a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="{{ path('etudiantAjouter') }}">Ajouter un etudiant</a>
          <a class="dropdown-item" href="#">Ajouter une liste etudiant</a>
          <a class="dropdown-item" href="{{ path('listerEtudiant') }}">Lister les etudiants</a>
        <div>
      </li>
      <li class="nav-item dropdown">
        <a class="navbar-brand dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Enseignant</a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="{{ path('enseignantAjouter') }}">Ajouter un enseignant</a>
          <a class="dropdown-item" href="{{ path('listerEnseignant') }}">Lister les enseignants</a>
        <div>
      </li>
    </ul>
  {% else %}
    <ul class="navbar-nav mr-auto">
      
      <li class="nav-item dropdown">
        <a class="navbar-brand dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Réalisation professionnelle
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        {% if is_granted('ROLE_ENSEIGNANT') %}
          <a class="dropdown-item" href="{{ path('enseignantLesRPaCommenter', { 'enseignant_id': app.user.enseignant.id }) }}">Lister les réalisations à commenter</a>
          <a class="dropdown-item" href="{{ path('listerRPPromo') }}">Lister les réalisations</a>
        {% else %}
          <a class="dropdown-item" href="{{ path('rpAjouter', { 'etudiant_id': app.user.etudiant.id }) }}">Nouvelle réalisation professionnelle</a>
          <a class="dropdown-item" href="{{ path('etudiantListerLesRP', { 'etudiant_id': app.user.etudiant.id }) }}">Lister mes réalisations</a>
          <a class="dropdown-item" href="{{ path('rpListerArchiver', { 'etudiant_id': app.user.etudiant.id }) }}">Lister mes réalisations archivées</a>
        {% endif %} 
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="navbar-brand dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Synthèse
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Bilan individuel</a>
          {% if is_granted('ROLE_ENSEIGNANT') %}
          {% else %}
          <a class="dropdown-item" href="{{ path('rpPDFB1', { 'etudiant_id': app.user.etudiant.id }) }}">Tableau de synthèse</a>
          {% endif %}
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="navbar-brand dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Stages
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">  
          {% if is_granted('ROLE_ENSEIGNANT') %}
            <a class="dropdown-item" href="{{ path('ListerStagesAffect', { 'enseignant_id': app.user.enseignant.id }) }}">Lister Stage affectés</a>
            <a class="dropdown-item" href="{{ path('AffecterStage') }}">Liste pour affecter un stage</a>
          {% else %}
            <a class="dropdown-item" href="{{ path('EtudiantListerStage', { 'etudiant_id': app.user.etudiant.id }) }}">Carnet de bord</a>
          {% endif %}
          <a class="dropdown-item" href="{{ path('ListerAncienStages') }}">Infos anciens stages</a>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="navbar-brand dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Divers
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Sauvegarde</a>
          {% if is_granted('ROLE_ENSEIGNANT') %}
          <a class="dropdown-item" href="{{ path('enseignantConsulter', { 'enseignant_id': app.user.enseignant.id }) }}">Profil</a>
          {% else %}
          <a class="dropdown-item" href="{{ path('etudiantConsulter', { 'etudiant_id': app.user.etudiant.id }) }}">Profil</a>
          {% endif %}
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="mailto:btsinfo.rostand@laposte.net?subject=[portfolio]">Contact admin</a>
        </div>
      </li>
    </ul>
    {% endif %}
    <form class="form-inline my-2 my-lg-0" >
      {% if is_granted('ROLE_ADMIN') %}
        <a class="navbar-brand" href="{{ path('app_logout', { 'admin_id': app.user.id }) }}" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">Deconnexion</a>
      {% elseif is_granted('ROLE_ENSEIGNANT') %}
        <a class="navbar-brand" href="{{ path('app_logout', { 'enseignant_id': app.user.enseignant.id }) }}" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">Deconnexion</a>
      {% else %}
      <a class="navbar-brand" href="{{ path('app_logout', { 'etudiant_id': app.user.etudiant.id }) }}" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">Deconnexion</a>      
        {% endif %}
    </form>
  </div>
</nav>
  </head>
<div id="content">{% block content %}{% endblock %}</div>
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

