{% extends "entete.html.twig" %}{# appelle l'entête (logo + menu déroulant) #}
{% block content %}
<body>
    <div class="container">
        <p></p>
        <center><h1>Ajouter etudiant</h1></center>
        <p></p>
        <hr class="featurette-divider p-1">
        {{ form_start(form) }}{# appelle un formulaire servant à #}
        <div class="form-row">
            <div class="col-md-6 mb-3">
				<label>Prenom</label>
					{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}})}}}{# zone de saisie gérant le prénom #}
			</div>

            <div class="col-md-6 mb-3">
				<label>Nom</label>
					{{ form_widget(form.nom, {'attr': {'class': 'form-control'}})}}}{# zone de saisie gérant le nom #}
			</div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
				<label>Email</label>
					{{ form_widget(form.mail, {'attr': {'class': 'form-control'}})}}}{# zone de saisie gérant l'adresse mail #}
			</div>
            <div class="col-md-4 md-3">
                <label>Promotion</label>
                    {{ form_widget(form.promotion, {'attr': {'class': 'form-control'}})}}}{# zone de saisie gérant la promotion #}
            </div>
            <div class="col-md-6 md-3">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-5 mb-3">
            </div>
            <center>
            <div class="col-md-2 mb-3">
                {{ form_widget(form.ajouter, {'attr': {'class': 'btn btn-secondary'}})}}{# bouton de validation #}
            </div>
            </center>
            <div class="col-md-5 mb-3">
            </div>
        </div>
        <center><p class="text-danger"> L'identifiant est 'prenom.nom' en minuscule ! <p></center>
        <center><p class="text-danger"> Le mot de passe par défaut est 'abcd' ! <p></center>
        <center><p class="text-danger"> Toutes les informations personnelles seront renseignées par l'étudiant en question ! <p></center>
    </div>
</body>
{% endblock %}