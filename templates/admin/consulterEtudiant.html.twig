{% extends "entete.html.twig" %}
{% block content %}
<body>
    <div class="container">
    <br>
    <center> <h2>Coordonnées</h2></center>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label>Nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}})}}
            </div>
            <div class="col-md-6 mb-3">
                <label>Prenom</label>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}})}}
            </div>
            <div class="col-md-6 mb-3">
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'hidden':'hidden'}})}}
            </div>
        </div>  
    </div>
    <center>
        {{ form_widget(form.modifier, {'attr': {'class': 'btn btn-secondary'}})}}
        <a class="btn btn-secondary" href='{{ path('MDPDefaultEtudiant', { 'user_id': pEtudiant.user.id }) }}'>Réinitialiser MDP</a> 
    </center>
    
</body>
{% endblock %}