{% extends "entete.html.twig" %}
{% block content %}
<style>
input[type=checkbox]{
	transform: scale(1.5);
}
</style>
<body>
	<br>
	<div class="container">
		{{ form_start(form) }}
		<label id="promotion" name="promotion">
			{{ form_widget(form.id, {'attr': {'class': 'form-control'}})}}
		</label>
		{{ form_end(form)}}
		<br>
		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.4.1.js" integrity= "sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>    
			<script>
				jQuery( document ).ready(function( $ ) {
					
					$('body').on('click', '#selectAll', function () {
						if ($(this).hasClass('allChecked')) {
							$('input[type="checkbox"]', '#table').prop('checked', false);
						} else {
							$('input[type="checkbox"]', '#table').prop('checked', true);
						}
						$(this).toggleClass('allChecked');
					})
					var selected = [];
					$('#checkboxes input:checked').each(function){
						selected.push($(this).attr('name'));
					}


					$("#promotion").change(function () {
						$( "select option:selected" ).each(function() {
						});
					var numeroption = $(this).find(':selected').attr('value');
					var str = "Acceder au compte";
					var str1 = "Aucun compte associ√©";
					$("#table tbody").empty();
					$('#tablAjax').text("");
					$.ajax({
						type: "post",
						url: '{{ path('afficherEtudiantPromo') }}',
						data: { numeroption : numeroption },
						dataType: "json",
							success: function (json) {
								$.each(json, function (index, value) {
									if(value.user_id == null){
										var result = str1;
									}
									else{
										var result = str.link("ConsulterEtudiantAdmin/"+value.user_id+"");
									}
									$('#table').append('<tbody class="table" id="table" data-toggle="BootstrapTable" data-height="460"><tr><td><input type="checkbox" id="selectPromo"></input></td><td>'+value.nom+' '+value.prenom+'</td><td>'+value.username+'</td><td>'+result+'</td></tr></tbody></table>');
									});
								},
								error: function(jxh,textmsg,errorThrown){
									console.log(textmsg);
									console.log(errorThrown);
								}
						});
						});
					});
			</script>
		{% endblock %}
		<table class="table" id="table" data-toggle="BootstrapTable" data-height="460">
			<thead>
				<tr>
					<th><input type="checkbox" id="selectAll" class="main"/></th>
					<th scope="col" data-sortable="true">Etudiant</th>
					<th scope="col" data-sortable="true">Username</th>
					<th></th>
				</tr>
			</thead>
		</table>
		{{ form_start(formPromo) }}
		<p>
		<label id="promo">
			{{ form_widget(formPromo.id, {'attr': {'class': 'form-control'}})}}
		</label> <button type="submit" class="btn btn-secondary">Affecter</button></p>
		{{ form_end(formPromo)}}
	</div>
</body>
{% endblock %}