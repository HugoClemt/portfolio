{% extends "entete.html.twig" %}
{% block content %}
<body>
<div class="container">
  <p></p>
    <center><h1>Tableau de suivi de stage</h1><p></p></center>
    {% if is_granted('ROLE_ENSEIGNANT') %}
	  {% else %}
    <center><a href="{{ path('stageAjouter', { 'etudiant_id': 100 }) }}"><input type="button" value="Ajouter un nouveau stage" class="btn btn-secondary btn-sl"></a></center><br>
      {% endif %}
      <table class="table" id="table" data-toggle="BootstrapTable" data-height="460">
        <thead>
          <tr>
            <th scope="col">Référent</th>
            <th scope="col">Etudiant</th>
            <th scope="col">Entreprise</th>
            <th scope="col">Tuteur</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for stage in pStages %}
            <tr>
              <td>{{stage.enseignant.nom}}</td>
              <td>{{stage.etudiant.nom}} {{stage.etudiant.prenom}}</td>
              <td>{{stage.nomentreprise}}</td>
              <td>{{stage.nomtut}}</td>
              {% if stage.semaineStages|length > 0 %}
              <td><a href="{{ path('StageConsulter', { 'stage_id': stage.id }) }}">Carnet de bord</a></td>
              {% else %}
              <td>Stage non valide</td>
              {% endif %}
            <tr>
          {% endfor %}
        <tbody>
      </table>
    <br>
  </div>
</body>
{% endblock %}