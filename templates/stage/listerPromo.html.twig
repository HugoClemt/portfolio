{% extends "entete.html.twig" %}
{% block content %}

<!DOCTYPE html>

<body>
<div class="container">
  <h1 class="display-4"><u>Tableau de suivi de stage par promotion</u></h1><br>


      <h4 align="left"><u>Suivi de stage {{pStages[0].etudiant.promotion.nom}}</u></h4>
        <table class="table table-dark" id="table" data-toggle="BootstrapTable" data-height="460">
          <thead>
            <tr>
            <th scope="col">Etudiant</th>
          <th scope="col">Entreprise</th>
          <th scope="col">Tuteur</th>
          <th scope="col">Professeur</th>
            </tr>
          </thead>
          <tbody>
                {% for stage in pStages %}
            <tr>
            <td>{{stage.etudiant.nom}} {{stage.etudiant.prenom}}</td>
            <td>{{stage.lieu}}</td>
            <td>{{stage.coordonneestut}}</td>
            {% if stage.enseignant == NULL %}
            <td><a href="#">Affecter un professeur </a></td>
            {% else %}
            <td>{{stage.enseignant.nom}} {{stage.enseignant.prenom}}</td>
            {% endif %}
  {% else %}
    <tr>
    <td>Aucun stage n'a été trouvé.</td>
    </tr>
  {% endfor %}
          </tbody>
        </table>
        <br>
        <br>





</body>

</html>

{% endblock %}
