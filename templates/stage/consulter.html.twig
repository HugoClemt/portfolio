{% extends "entete.html.twig" %}
 {% block content %}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <script src="https://unpkg.com/bootstrap-table@1.18.0/dist/bootstrap-table.min.js"></script>
  <link href="https://unpkg.com/bootstrap-table@1.18.0/dist/bootstrap-table.min.css" rel="stylesheet">
  </head>
  <html>

    <body>
      <br>
      <center>
      <h1>Consultation de stage</h1>
      </center>
      <hr class="featurette-divider p-1">
      <div class="container">
        <form>
          <div class="form-row">
            <div class="col-md-4 mb-3">
              <label for="disabledTextInput"><b>Nom de l'entreprise</b> : {{pStage.nomentreprise}}</label>
            </div>
            <div>
              <label for="disabledTextInput">SIRET : {{pStage.siret}}</label>
            </div>
            <div>
              <label for="disabledTextInput">Code NAF : {{pStage.codenaf}}</label>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-2 mb-3">
              <label for="disabledTextInput">Directeur : {{pStage.directeur}}</label>
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Ville : {{pStage.ville}}</label>
              
            </div>
             <div class="col-md-2 mb-3">
              <label for="disabledTextInput">Code Postal : {{pStage.copos}}</label>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Adresse : {{pStage.adrentreprise}}</label>
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Téléphone : {{pStage.telentreprise}}</label>
            </div>
          </div>
          <center><div class="col-md-6 mb-3">
            <label for="disabledTextInput" >Mail : {{pStage.mailentreprise}}</label>
          </div></center>
          <hr class="featurette-divider p-2">
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Nom du tuteur : {{pStage.nomtut}}</label>
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Téléphone du tuteur : {{pStage.teltut}}</label>
            </div>
          </div>
          <center><div class="col-md-6 mb-3">
            <label for="disabledTextInput" >Mail du tuteur : {{pStage.mailtut}}</label>
          </div></center>
          <hr class="featurette-divider p-2">
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Date de debut du stage : {{pStage.dateDebut|date('Y-m-d')}}</label>
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Date de fin du stage : {{pStage.dateFin|date('Y-m-d')}}</label>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Durée : {{pStage.nbsemaine}}</label>
            </div>
            <div class="col-md-6 mb-3">
              <label for="disabledTextInput">Sujet : {{pStage.sujet}}</label>
            </div>
          </div>
        </form>
        <hr class="featurette-divider p-2">
        <center><h2>Horaires</h2><br></center>
        <table class="table table-dark" >
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Lundi</th>
              <th scope="col">Mardi</th>
              <th scope="col">Mercredi</th>
              <th scope="col">Jeudi</th>
              <th scope="col">Vendredi</th>
              <th scope="col">Samedi</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Horaires</th>
              <td></td>
              <td>{{pStage.horLun}}</td>
              <td>{{pStage.horMar}}</td>
              <td>{{pStage.horMer}}</td>
              <td>{{pStage.horJeu}}</td>
              <td>{{pStage.horVen}}</td>
              <td>{{pStage.horSam}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </body>
</html>

{% endblock %}
