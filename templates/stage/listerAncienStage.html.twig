{% extends "entete.html.twig" %}
{% block content %}

<!DOCTYPE html>

<body>
<div class="container">
  <br>
  <center><h1>Anciens stages</h1><br></center>

        <table class="table table-dark" id="table" data-toggle="BootstrapTable" data-height="460">
          <thead>
            <tr>
            <th scope="col">Nom entreprise</th>
          <th scope="col">Adresse</th>
          <th scope="col">Telephone</th>
          <th scope="col">Mail</th>
            </tr>
          </thead>
          <tbody>
                {% for stage in pStages %}
            <tr>
            <td>{{stage.nomentreprise}}</td>
            <td>{{stage.adrentreprise}}</td>
            <td>{{stage.telentreprise}}</td>
            <td>{{stage.mailentreprise}}</td>
            
  {% else %}
    <tr>
    <td>Aucun stage n'a été trouvé.</td>
    </tr>
  {% endfor %}
          </tbody>
        </table>
        <br>
        <br>
</body>

</html>

{% endblock %}

      

