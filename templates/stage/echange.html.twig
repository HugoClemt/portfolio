    </ul>
	</div></center>
	</nav></div>
<br>
<div class="container">
    {{ form_start(form) }}
    <div class="form-row">
      <div class="col-md-8 mb-3">
        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="col-md-4 mb-3">
        {{ form_widget(form.envoyer, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>  
    {{ form_end(form) }}
</div>

