{% extends "entete.html.twig" %}
{% block content %}

<style>
    .alnright { 
      text-align: right; 
      }

    .alnleft { 
      text-align: left; 
      }


    table {
      table-layout: fixed;
      border-collapse:collapse;
  }

    td {
      overflow-wrap: break-word;
    }
</style>
<body>
<div class="container">
	<p></p><center><h1>Consultation du stage</h1></center><center>
  <p>Stage de <b>{{pStage.etudiant.nom}} {{pStage.etudiant.prenom}}</b> suivi par <b>{{pStage.enseignant.nom}}</b></p></center>       
	<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #DDDDDD;">
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		  <span class="navbar-toggler-icon"></span>
	  </button>
	<center><div class="navbar-collapse text-right" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('StageConsulter', { 'stage_id': pStage.id }) }}">Information</a>
      </li>
      {% for i in 1..pStage.nbsemaine %}
      <li class="nav-item"><a class="nav-link" href="{{ path('ConsulterSemaineStage', { 'semaine_id': (pSemaines[i-1]).id }) }}">Semaine {{ i }}</a></li>
      {% endfor %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('EchangeStage', {'stage_id': pStage.id }) }}">Echange</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('PointageStage', {'stage_id': pStage.id }) }}">Pointage</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('PdfAttestation', {'stage_id': pStage.id }) }}">Attestation</a>
        </li>
    </ul>
	</div></center>
	</nav></div>
<br>
<div class="container">
    {{ form_start(form) }}
    <div class="form-row">
      <div class="col-md-11 mb-3">
        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="col-md-1 mb-3">
        {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-secondary'}}) }}
      </div>
    </div>  
    {{ form_end(form) }}
<br>


<table class="table" id="table" data-toggle="BootstrapTable" data-height="460">
        <thead>

        </thead>
        <tbody>
{% set dateprecedente = null %}
{% for echange in pEchanges %}

{% if echange.dateMessage|date("d/m/Y") == dateprecedente %}
    {% set dateprecedente = echange.dateMessage|date("d/m/Y") %}
    {% if echange.user.etudiant is null %}
    <tr>
              <td>{{ echange.user.enseignant.prenom }} {{ echange.user.enseignant.nom }}
              <br>
              {{ echange.dateMessage|date("h:i")}} (GMT)
              <br>
              {{ echange.message }}</td>
  </tr>          
    {% else %}      
  <tr>
              <td>
              <div class='alnright'>{{ echange.user.etudiant.prenom }} {{ echange.user.etudiant.nom }}</div>
              <div class='alnright'>{{ echange.dateMessage|date("h:i")}} (GMT)</div>
              <div class='alnleft'>{{ echange.message }}</div>
              </td>
  </tr>   
    {% endif %}
{% else %}
    {% set dateprecedente = echange.dateMessage|date("d/m/Y") %}
    {% if echange.user.etudiant is null %}
    <tr>
              <td>{{ echange.user.enseignant.prenom }} {{ echange.user.enseignant.nom }}
              <br>
              {{ echange.dateMessage|date("d/m/Y")}}
              <br>
              {{ echange.message }}</td>
  </tr>         
    {% else %}      
  <tr>
              <td>
              <div class='alnright'>{{ echange.user.etudiant.prenom }} {{ echange.user.etudiant.nom }}</div>
              <div class='alnright'>{{ echange.dateMessage|date("d/m/Y")}}</div>
              <div class='alnleft'>{{ echange.message }}</div>
              </td>
  </tr>   
  {% endif %}
  {% endif %}
{% endfor %}
</div>
<tbody>
</table>
{% endblock %}